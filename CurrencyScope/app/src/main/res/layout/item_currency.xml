<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D3D3D3"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/textItemCurrencyNominal"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="10000"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/currencyDetailsLayout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textItemCurrencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Фунт стерлингов Соединенного Королевства"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageItemCurrencyIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/default_currency" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textItemCurrencyCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GBP"
                android:textAlignment="textStart"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textItemCurrencyValue"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="100.0005"
        android:textAlignment="textEnd"
        android:textSize="18sp" />

</LinearLayout>
